# EkoSim Production Environment Variables
# Copy this file to .env and fill in the values

# PostgreSQL Database Configuration
POSTGRES_DB=ekosim
POSTGRES_USER=ekosim
POSTGRES_PASSWORD=                    # REQUIRED: Generate a secure random password

# JWT Authentication
JWT_SECRET=                           # REQUIRED: Generate a 64-character random string

# Application URLs
ALLOWED_ORIGINS=https://ekosim.app    # Your production domain

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000          # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100          # Max requests per window

# Optional: Session Configuration
SESSION_SECRET=                       # REQUIRED: Generate a random string

# Optional: Email Configuration (for password reset, notifications)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@ekosim.app

# Generate secure passwords with:
# openssl rand -hex 32

# Generate JWT secret with:
# openssl rand -base64 64 | tr -d '\n'
